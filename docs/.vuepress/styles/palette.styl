$contentWidth = 90%

.page
  .list
    .item
      padding: 1rem 0
      border-bottom: 1px solid #eaecef
      &:last-child
        border: none
      .title
        display: block
        line-height: 1.7
        font-weight: 500
        color: #1e90ff
        text-decoration: none
        font-size: 18px
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
      .desc
        font-size: 14px
